let raceNumber = Math.floor(Math.random() * 1000);

//creating a variable to indicate whether a runner registered early or not

let registeredEarly = true;
//creating a variable for runner's age
let runnerAge = 18;

//creating a controlflow statement to  check whether the runner is an adult and registered early
if (runnerAge > 18 && registeredEarly=== true){
  raceNumber += 1000;
  console.log (`Adult and registered early so raceNumber is ${raceNumber}`);
}

//For runners over 18 who registered early, logging a statement to the console telling them that they will race at 9:30 am. Include their raceNumber, late registrans will race at 11am
if (runnerAge > 18 && registeredEarly=== true){
  console.log(`Person with race number ${raceNumber} will race at 9:30am.`);
} else if (runnerAge > 18 && !registeredEarly){
  console.log(`Person with race number ${raceNumber} will race at 11:00am.`);
} else if(runnerAge < 18 ){
  console.log(`Person with race number ${raceNumber} will race at 12:30pm.`)
} else{
  console.log(`You are 18, please visit the registration desk.`);
}
